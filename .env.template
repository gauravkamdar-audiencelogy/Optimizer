# =============================================================================
# RTB Optimizer Environment Variables
# =============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to git - it contains secrets!
#
# Usage:
#   cp .env.template .env
#   # Edit .env with your credentials
#   source .env  # Or use python-dotenv
# =============================================================================

# -----------------------------------------------------------------------------
# AWS S3 Configuration
# -----------------------------------------------------------------------------
# Used for: Uploading optimizer outputs, managing bidder manifest
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
OPTIMIZER_S3_BUCKET=tn-optimizer-data

# S3 path structure will be:
#   s3://{bucket}/optimizer/{dataset}/runs/{run_id}/
#   s3://{bucket}/optimizer/{dataset}/active/manifest.json

# -----------------------------------------------------------------------------
# Snowflake Configuration
# -----------------------------------------------------------------------------
# Used for: Fetching bid/view/click data, production metrics
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=
SNOWFLAKE_DATABASE=
SNOWFLAKE_SCHEMA=
SNOWFLAKE_ROLE=

# Optional: Connection timeout in seconds
SNOWFLAKE_LOGIN_TIMEOUT=60

# -----------------------------------------------------------------------------
# MySQL Configuration
# -----------------------------------------------------------------------------
# Used for: Audit logging, run tracking, deployment status
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=

# Optional: Connection pool settings
MYSQL_POOL_SIZE=5

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
# Set to 'local' to skip all external integrations (for development)
# Set to 'qa' or 'production' for full integration
OPTIMIZER_ENV=local

# Enable verbose logging for debugging integrations
OPTIMIZER_DEBUG=false
